#include<iostream>
using namespace std;
void pattern13(int n){
    int sp=2*(n-1);
    for(int i=1;i<=n;i++){
        for(int j=1;j<=i;j++){
            cout<<j;
        }
        for(int j=1;j<=sp;j++){
            cout<<" ";
        }
        for(int j=i;j>=1;j--){
            cout<<j;
        }
        cout<<endl;
        sp=sp-2;
    }
}
int main(){
    int n;
    cin>>n;
    pattern13(n);
}
